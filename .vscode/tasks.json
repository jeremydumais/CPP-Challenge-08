{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build exercices",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++1y",
                "main.cpp",
                "source\\narcissistic.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++1y",
                "-I",
                "d:/Programmation/GoogleTest/googletest/include",
                "-L",
                "d:/Programmation/GoogleTest/googletest/lib",
                "tests/narcissistic_tests.cpp",
                "source/narcissistic.cpp",
                "-lgtest_main", 
                "-lpthread",
                "-o",
                "tests.exe"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "run exercices",
            "type": "shell",
            "command": "a.exe"
        }
    ]
}